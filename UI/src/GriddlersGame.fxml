                                    <Accordion layoutX="122.0" layoutY="655.0" />
                                  <TitledPane fx:id="playerStatistics" animated="false" layoutX="1.0" layoutY="682.0" prefHeight="28.0" prefWidth="336.0" text="Statistics" />
